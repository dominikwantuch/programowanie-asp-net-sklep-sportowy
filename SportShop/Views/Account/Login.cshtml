@model Login

@{
    Layout = "_Layout";
}
<div class="row">
    <div class="col-sm-12 col-md-8 offset-md-2  col-lg-4 offset-lg-4 p-3 border-radius" style="background: #34495e">
        <form asp-controller="Account" asp-action="Login" method="post" enctype="application/x-www-form-urlencoded">

            <div class="form-group">
                <label for="Name">
                    Name
                </label>
                <input id="Name" class="form-control" name="Name" type="text" value="@Model.Name"/>
            </div>

            <div class="form-group">
                <label for="Password">
                    Password
                </label>
                <input id="Password" class="form-control" name="Password" type="password" value="@Model.Password"/>
            </div>

            <div>
                <button type="submit" class="btn btn-primary" value="submit">submit</button>
            </div>
        </form>
    </div>
</div>