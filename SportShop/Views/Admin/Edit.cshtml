@model Product

@{
    Layout = "_Layout";
}
<div class="row">
    <div class="col-sm-4 offset-4 bg-dark p-3 border-radius">
        <form asp-action="Save" method="post" enctype="application/x-www-form-urlencoded">
            
            <div class="form-group" style="display: none">
                <label for="ProductId">
                    ProductId
                </label>
                <input id="ProductId" class="form-control" name="ProductId" type="text" value="@Model.ProductId"/>
            </div>

            <div class="form-group">
                <label for="ManufacturerId">
                    ManufacturerId
                </label>
                <input id="ManufacturerId" class="form-control" name="ManufacturerId" type="text" value="@Model.ManufacturerId"/>
            </div>

            <div class="form-group">
                <label>
                    Name
                </label>
                <input name="Name" class="form-control" type="text" value="@Model.Name"/>
            </div>

            <div class="form-group">
                <label>
                    Description
                </label>
                <input name="Description" class="form-control" type="text" value="@Model.Description"/>
            </div>

            <div class="form-group">
                <label>
                    Price
                </label>
                <input name="Price" class="form-control" type="text" value="@Model.Price"/>
            </div>

            <div class="form-group">
                <label>
                    Category
                </label>
                <input name="Category" class="form-control" type="text" value="@Model.Category"/>
            </div>

            <div>
                <button type="submit" class="btn btn-primary" value="submit">submit</button>
            </div>
        </form>

    </div>
</div>
<div>
    <h3>
        @Model.Name
    </h3>
    @Model.Description
    <h4>
        @Model.Price
    </h4>
</div>
<hr/>