@model Product

@{
    Layout = "_AdminLayout";
}
<div class="row">
        <div class="col-sm-12 col-md-8 offset-md-2  col-lg-4 offset-lg-4 p-3 border-radius" style="background: #34495e">
            <form asp-action="Save" method="post" enctype="application/x-www-form-urlencoded">

                <div class="form-group" style="display: none">
                    <label asp-for="ProductId">
                        Product ID
                    </label>
                    <input id="ProductId" class="form-control" name="ProductId" type="text" value="@Model.ProductId"/>
                </div>

                <div class="form-group">
                    <label asp-for="ManufacturerId">Manufacturer ID</label>
                    <div><span asp-validation-for="ManufacturerId" class="text-danger"></span></div>
                    <input asp-for="ManufacturerId" id="ManufacturerId" class="form-control" name="ManufacturerId" type="text" value="@Model.ManufacturerId" />
                </div>

                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <div><span asp-validation-for="Name" class="text-danger"></span></div>
                    <input asp-for="Name" name="Name" class="form-control" type="text" value="@Model.Name" />
                </div>

                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <div><span asp-validation-for="Description" class="text-danger"></span></div>
                    <input asp-for="Description" name="Description" class="form-control" type="text" value="@Model.Description" />
                </div>

                <div class="form-group">
                    <label asp-for="Price">Price</label>
                    <div><span asp-validation-for="Price" class="text-danger"></span></div>
                    <input asp-for="Price" name="Price" class="form-control" type="text" value="@Model.Price" />
                </div>

                <div class="form-group">
                    <label asp-for="Category">Category</label>
                    <div><span asp-validation-for="Category" class="text-danger"></span></div>
                    <input asp-for="Category"  name="Category" class="form-control" type="text" value="@Model.Category" />
                </div>

                <div>
                    <button type="submit" class="btn btn-primary" value="submit">submit</button>
                </div>
            </form>
        </div>
</div>
