@model IEnumerable<Product>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>

@foreach (var p in Model)
{
    <div>
        <h3>
            @p.Name
        </h3>
        @p.Description
        <h4>
            @p.Price
        </h4>

        <a asp-controller="Admin"
           asp-action="Edit"
           asp-route-id="@p.ProductId">
            <button>Edit</button>
        </a>

        <a asp-controller="Admin"
           asp-action="Delete"
           asp-route-id="@p.ProductId">
            <button>Delete</button>
        </a>

    </div>
    <hr/>
}
</body>
</html>