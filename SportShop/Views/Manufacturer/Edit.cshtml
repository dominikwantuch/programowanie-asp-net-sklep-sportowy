@model Manufacturer

@{
    Layout = "_AdminLayout";
}
<div class="row">
        <div class="col-sm-12 col-md-8 offset-md-2  col-lg-4 offset-lg-4 p-3 border-radius" style="background: #34495e">
            <form asp-controller="Manufacturer" asp-action="Save" method="post" enctype="application/x-www-form-urlencoded">

                <div class="form-group" style="display: none">
                    <label for="ManufacturerId">
                        Manufacturer ID
                    </label>
                    <input id="ManufacturerId" class="form-control" name="Id" type="text" value="@Model.Id"/>
                </div>

                <div class="form-group">
                    <label for="Name">
                        Name
                    </label>
                    <input id="Name" class="form-control" name="Name" type="text" value="@Model.Name"/>
                </div>

                <div class="form-group">
                    <label for="Country">
                        Country
                    </label>
                    <input id="Country" name="Country" class="form-control" type="text" value="@Model.Country"/>
                </div>

                <div>
                    <button type="submit" class="btn btn-primary" value="submit">submit</button>
                </div>
            </form>
        </div>
</div>