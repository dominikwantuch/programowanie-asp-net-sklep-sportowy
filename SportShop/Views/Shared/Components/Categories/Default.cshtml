@model IEnumerable<string>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
    <a class="navbar-brand" asp-controller="Product"
       asp-action="Index" asp-route-name="">
        SportShop
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigationBar" aria-controls="navigationBar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navigationBar">
        <div class="navbar-nav mr-auto">
            <a class="nav-item nav-link @(ViewBag.CurrentPage == "Main" ? "active" : "")" asp-controller="Product" asp-route-name=""
               asp-action="Index">
                Main Page
            </a>
            <div class="nav-item dropdown @(ViewBag.CurrentPage == "Categories" ? "active" : "")">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Categories
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    @foreach (var category in @Model)
                    {
                        <a class="dropdown-item" asp-controller="Product" asp-action="Index" asp-route-name="@category">@category</a>
                    }
                </div>
            </div>
            <a class="nav-item nav-link" asp-controller="Admin"
               asp-action="Index">
                Admin Panel
            </a>
        </div>
    </div>
</nav>